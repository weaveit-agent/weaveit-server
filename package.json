{
  "name": "weaveit",
  "version": "1.0.0",
  "description": "A solana package to generate tutorial videos from text and audio",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "devo": "ts-node-esm src/server.ts",
    "dev": "node --loader ts-node/esm src/server.ts",
    "dev:watch": "tsx watch src/server.ts",
    "d": "node --loader ts-node/esm src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build": "tsup src/server.ts --format esm --clean --onSuccess \"cp package.json dist/\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dc": "node defchrome.js",
    "voice": "npx ts-node src/cli.ts analyze -f tester.ts --voice",
    "video": "npx ts-node src/cli.ts analyze -f tutorial.ts --voice --video"
  },
  "keywords": [
    "tutorial",
    "video",
    "sdk",
    "text-to-video",
    "node",
    "canvas",
    "ffmpeg",
    "tts"
  ],
  "author": "Loganthewise",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:lawalabdulrazaq/weaveit.git"
  },
  "dependencies": {
    "@solana/spl-token": "^0.4.13",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@solana/web3.js": "^1.98.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@vitejs/plugin-react": "^4.5.2",
    "axios": "^1.8.4",
    "bs58": "^6.0.0",
    "canvas": "^3.1.0",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "ffmpeg": "^0.0.4",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.514.0",
    "next": "^15.5.0",
    "node-gtts": "^2.0.2",
    "openai": "^4.92.1",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@types/commander": "^2.12.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^22.15.31",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.5",
    "tailwindcss": "^4.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.8.3"
  }
}